doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Admin Dashboard
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet")
    block head

  body
    nav.sb-topnav.navbar.navbar-expand.navbar-dark.bg-dark
      .navbar-brand.ps-3 Admin Panel
      button#sidebarToggle.btn.btn-link.btn-sm.order-1.order-lg-0.me-4.me-lg-0(href='#')
        i.fas.fa-bars
    
    #layoutSidenav
      #layoutSidenav_nav
        nav.sb-sidenav.accordion.sb-sidenav-dark
          .sb-sidenav-menu
            .nav
              .sb-sidenav-menu-heading Core
              a.nav-link(href='/admin')
                .sb-nav-link-icon
                  i.fas.fa-tachometer-alt
                | Dashboard
              a.nav-link(href='/admin/users')
                .sb-nav-link-icon
                  i.fas.fa-users
                | Quản lý Users
      
      #layoutSidenav_content
        main
          block content
        footer.py-4.bg-light.mt-auto
          .container-fluid.px-4
            .d-flex.align-items-center.justify-content-between.small
              .text-muted Copyright © Your Website 2024
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    block scripts