doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Admin 
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
        link(rel="stylesheet", href="/public/css/admin.css")
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            .container
                a.navbar-brand(href="/admin") Admin Panel
                button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav")
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        li.nav-item
                            a.nav-link(href="/admin") Dashboard
                        li.nav-item
                            a.nav-link(href="/admin/users") Users
                        li.nav-item
                            a.nav-link(href="/admin/products") Products
                    if user
                        span.navbar-text.mr-3 Xin chào #{user.username}
                        a.btn.btn-outline-light(href="/logout") Đăng xuất

        .container.mt-4
            block content

        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")