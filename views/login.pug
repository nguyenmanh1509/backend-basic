doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Đăng nhập
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
        link(rel="stylesheet", href="/public/css/login.css")
    body
        .container
            .row.justify-content-center.mt-5
                .col-md-6
                    .card
                        .card-header.text-center
                            h4 Đăng nhập
                        .card-body
                            if error
                                .alert.alert-danger #{error}
                            form(method="POST" action="/login")
                                .form-group
                                    label(for="username") Tên đăng nhập
                                    input#username.form-control(type="text" name="username" required)
                                .form-group
                                    label(for="password") Mật khẩu
                                    input#password.form-control(type="password" name="password" required)
                                button.btn.btn-primary.btn-block(type="submit") Đăng nhập